{
  "name": "@hmpact/devtools",
  "type": "module",
  "version": "0.0.1-beta.1",
  "description": "",
  "author": "toakiryu <toakiryu@gmail.com>",
  "license": "MIT",
  "keywords": [
    "development",
    "tool"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toakiryu/hmpact.git",
    "directory": "packages/devtools"
  },
  "bugs": {
    "url": "https://github.com/toakiryu/hmpact/issues"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "pnpm build:info && node ../../.scripts/build-esbuild.js --entries=./src/index.ts,./src/features/build-info/index.ts",
    "build:info": "node ../../.scripts/build-info.js",
    "typecheck": "tsc --noEmit",
    "t:pack": "pnpm pack",
    "prepack": "pnpm build",
    "lint": "eslint",
    "format": "prettier --write ."
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./build-info": {
      "types": "./dist/features/build-info/index.d.ts",
      "import": "./dist/features/build-info/index.mjs"
    }
  },
  "dependencies": {
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "glob": "^11.0.0",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.20.0"
}
